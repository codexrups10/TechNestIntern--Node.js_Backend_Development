                "users",
                "me",
                ""
              ]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bio\": \"Updated bio\",\n  \"location\": \"New York\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/users/update_profile/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "users",
                "update_profile",
                ""
              ]
            }
          }
        },
        {
          "name": "Get User by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/v1/users/1/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "users",
                "1",
                ""
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Categories",
