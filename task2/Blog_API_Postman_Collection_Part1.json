            }
          }
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/api/v1/categories/1/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "categories",
                "1",
                ""
              ]
            }
          }
        }
      ]
    }
  ]
}