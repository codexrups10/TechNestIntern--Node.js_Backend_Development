              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Technology\",\n  \"slug\": \"technology\",\n  \"description\": \"Posts about technology and programming\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/v1/categories/",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "v1",
                "categories",
                ""
